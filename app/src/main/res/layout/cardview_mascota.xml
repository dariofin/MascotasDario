<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id='@+id/cvMascota'
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:src="@drawable/cat"
            />

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgFoto"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"
            android:drawableStart="@mipmap/bone_empty"
            android:drawableLeft="@mipmap/bone_empty"
            android:text="@string/nombre"
            android:textSize="@dimen/nombre_cardview"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLikes"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgFoto"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"

            android:drawableRight="@mipmap/bone"
            android:text="7"
            android:textSize="20sp"
            android:verticalScrollbarPosition="right"
            app:drawableEndCompat="@mipmap/bone"
            app:drawableRightCompat="@mipmap/bone" />


    </RelativeLayout>





</androidx.cardview.widget.CardView>

